{
    "name": "ezgpg",
    "productName": "ezgpg",
    "version": "1.1.0-beta.1",
    "description": "Simple UI for GPG",
    "main": ".webpack/main",
    "scripts": {
        "start": "electron-forge start",
        "dev": "NODE_ENV=development DEBUG=ezgpg:* electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "tslint -c tslint.json -p tsconfig.json",
        "test": "jest"
    },
    "keywords": [
        "gpg",
        "gnupg",
        "crypt",
        "electron-app"
    ],
    "author": "m0rdras <m0rdras@users.noreply.github.com>",
    "license": "Apache-2.0",
    "repository": "github:m0rdras/ezgpg",
    "os": [
        "darwin",
        "linux",
        "win32"
    ],
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "ezgpg"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ],
            "plugins": [
                [
                    "@electron-forge/plugin-webpack",
                    {
                        "mainConfig": "./webpack.main.config.js",
                        "renderer": {
                            "config": "./webpack.renderer.config.js",
                            "entryPoints": [
                                {
                                    "html": "./src/index.html",
                                    "js": "./src/renderer.ts",
                                    "name": "main_window"
                                }
                            ]
                        }
                    }
                ]
            ],
            "publishers": [
                {
                    "name": "@electron-forge/publisher-github",
                    "config": {
                        "repository": {
                            "owner": "m0rdras",
                            "name": "ezgpg"
                        },
                        "prerelease": true
                    }
                }
            ]
        }
    },
    "devDependencies": {
        "@babel/core": "^7.7.7",
        "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
        "@babel/plugin-proposal-optional-chaining": "^7.7.5",
        "@babel/preset-env": "^7.7.7",
        "@babel/preset-react": "^7.7.4",
        "@babel/preset-typescript": "^7.7.7",
        "@electron-forge/cli": "^6.0.0-beta.47",
        "@electron-forge/maker-deb": "^6.0.0-beta.47",
        "@electron-forge/maker-rpm": "^6.0.0-beta.47",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.47",
        "@electron-forge/maker-zip": "^6.0.0-beta.47",
        "@electron-forge/plugin-webpack": "6.0.0-beta.45",
        "@electron-forge/publisher-github": "^6.0.0-beta.47",
        "@hot-loader/react-dom": "^16.11.0",
        "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
        "@types/concat-stream": "^1.6.0",
        "@types/cross-spawn": "^6.0.1",
        "@types/debug": "^4.1.5",
        "@types/electron-store": "^3.2.0",
        "@types/enzyme": "^3.10.4",
        "@types/enzyme-adapter-react-16": "^1.0.5",
        "@types/jest": "^24.0.25",
        "@types/jsdom": "^12.2.4",
        "@types/node": "^13.1.1",
        "@types/react": "^16.9.17",
        "@types/react-dom": "^16.9.4",
        "@types/react-router-dom": "^5.1.3",
        "babel-jest": "^24.9.0",
        "babel-loader": "^8.0.6",
        "concat-stream": "^2.0.0",
        "cross-spawn": "^7.0.1",
        "css-loader": "^3.0.0",
        "debug": "^4.1.1",
        "electron": "7.1.7",
        "electron-store": "^5.1.0",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.2",
        "fork-ts-checker-webpack-plugin": "^3.1.1",
        "jest": "^24.9.0",
        "jsdom": "^15.2.1",
        "mobx": "^5.15.1",
        "mobx-react-lite": "^1.5.2",
        "mobx-state-tree": "^3.15.0",
        "node-loader": "^0.6.0",
        "prettier": "^1.19.1",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-hot-loader": "^4.12.18",
        "react-router-dom": "^5.1.2",
        "semantic-ui-css": "^2.4.1",
        "semantic-ui-react": "^0.88.2",
        "style-loader": "^0.23.1",
        "supports-color": "^7.1.0",
        "ts-loader": "^6.2.1",
        "tslint": "^5.20.0",
        "typescript": "^3.7.0",
        "url-loader": "^3.0.0",
        "webpack": "^4.41.4"
    },
    "dependencies": {
        "electron-squirrel-startup": "^1.0.0"
    }
}
